<html>
    <%- include("./partials/header.ejs") %>
    <body>
    <%- include("./partials/navbar.ejs") %>
    <div class="container-fluid d-flex h-75" style="justify-content: center;align-items: center;">
        <form style="width: min(98%, 500px);" method="POST">
